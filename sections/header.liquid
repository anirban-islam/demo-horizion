

<header class="header-navbar">
  <nav class="navbar">
    <div class="navbar__left">
      <a class="navbar__brand" href="{{ routes.root_url }}">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | image_url: width: 120 | image_tag }}" alt="{{ shop.name | escape }}">
        {% else %}
          {{ shop.name | escape }}
        {% endif %}
      </a>
    </div>
    <div class="navbar__right">
      {% for block in section.blocks %}
        {% if block.type == 'link' %}
          <a class="navbar__link" href="{{ block.settings.url | escape }}">{{ block.settings.label | t }}</a>
        {% endif %}
      {% endfor %}
      {% assign account_url = routes.account_login_url %}
      {% assign account_label = 'general.navigation.login' %}
      {% if customer %}
        {% assign account_url = routes.account_profile_url %}
        {% assign account_label = 'general.navigation.logout' %}
      {% endif %}
      {% if section.settings.show_account_icon %}
        <a class="navbar__icon" href="{{ account_url }}" title="{{ account_label | t }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.show_cart_icon %}
        <a class="navbar__icon" href="{{ routes.cart_url }}" title="{{ 'general.navigation.cart' | t }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 16 16">
            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
          </svg>
        </a>
      {% endif %}
    </div>
  </nav>
</header>

{% stylesheet %}
.header-navbar {
  background: linear-gradient(90deg, #f8fafc 0%, #e2e8f0 100%);
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  padding: 0.5rem 0;
}
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}
.navbar__left {
  flex: 1;
}
.navbar__brand {
  font-size: 1.7rem;
  font-weight: 700;
  color: #0f172a;
  text-decoration: none;
  letter-spacing: 0.02em;
}
.navbar__center {
  flex: 2;
  display: flex;
  gap: 2rem;
  justify-content: center;
}
.navbar__link {
  font-size: 1.1rem;
  color: #334155;
  text-decoration: none;
  padding: 0.5rem 0.8rem;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
}
.navbar__link.active,
.navbar__link:hover {
  background: #e0e7ef;
  color: #0f172a;
}
.navbar__right {
  flex: 1;
  display: flex;
  gap: 1.2rem;
  justify-content: flex-end;
  align-items: center;
}
.navbar__icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.4rem;
  border-radius: 50%;
  background: #f1f5f9;
  color: #0f172a;
  transition: background 0.2s, color 0.2s;
  text-decoration: none;
}
.navbar__icon:hover {
  background: #e0e7ef;
  color: #2563eb;
}
@media (max-width: 900px) {
  .navbar {
    flex-direction: column;
    gap: 0.5rem;
    padding: 0 1rem;
  }
  .navbar__center {
    gap: 1rem;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:labels.logo"
    },
    {
      "type": "checkbox",
      "id": "show_account_icon",
      "label": "t:labels.show_account_icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart_icon",
      "label": "t:labels.show_cart_icon",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "t:general.link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "t:labels.label",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "url",
          "label": "t:labels.url",
          "default": "/"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "t:general.header",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "label": "Home",
            "url": "/"
          }
        },
        {
          "type": "link",
          "settings": {
            "label": "Shop",
            "url": "/collections/all"
          }
        }
      ]
    }
  ]
}
{% endschema %}